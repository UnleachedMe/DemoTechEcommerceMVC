@{
    ViewData["Title"] = "About Us";
    Layout = "_Layout"; // Make sure this matches your layout file
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <!-- Minimal Heading -->
            <h1 class="display-5 fw-bold mb-4">Our Story</h1>

            <!-- Simple Divider -->
            <div class="divider bg-primary mx-auto mb-4" style="width: 80px; height: 3px;"></div>

            <!-- Brief Description -->
            <p class="lead mb-5">
                We're a passionate team dedicated to creating quality products with a simple mission:
                to make your life better through thoughtful design.
            </p>

            <!-- Minimal Stats -->
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="counter-box">
                        <h3 class="fw-bold">2015</h3>
                        <p class="text-muted">Founded</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="counter-box">
                        <h3 class="fw-bold">10K+</h3>
                        <p class="text-muted">Customers</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="counter-box">
                        <h3 class="fw-bold">3</h3>
                        <p class="text-muted">Countries</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .divider {
        opacity: 0.7;
    }

    .counter-box {
        padding: 1.5rem;
        border-radius: 8px;
        background-color: rgba(0,0,0,0.02);
    }

        .counter-box h3 {
            color: #4361ee;
        }
</style>