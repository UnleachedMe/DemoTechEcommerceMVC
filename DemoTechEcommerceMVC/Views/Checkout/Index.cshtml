@model DemoTechEcommerceMVC.Models.Address

@{
    List<Address> addresses = ViewBag.Adresses;
}

<div class="container mt-5 d-flex justify-content-center">
    <div style="max-width: 800px; width: 100%; display: flex; gap: 2rem;">
        <!-- Conteneur flex parent -->

        <div style="flex: 1;">
            <!-- Formulaire à gauche -->
            <form asp-action="Index">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-2">
                    <label asp-for="AdressLine" class="control-label mb-0">Address line</label>
                    <input asp-for="AdressLine" class="form-control" />
                    <span asp-validation-for="AdressLine" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="City" class="control-label mb-0"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="State" class="control-label mb-0"></label>
                    <input asp-for="State" class="form-control" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="ZipCode" class="control-label mb-0"></label>
                    <input asp-for="ZipCode" class="form-control" />
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Add New Address" class="btn btn-primary" />
                </div>
            </form>
        </div>

        <div style="flex: 1; display: flex; flex-direction: column; gap: 1rem;">
            <!-- Liste à droite empilée -->
            @foreach (var address in addresses)
            {
                <div class="card">
                    <div class="card-body">
                        <h5>@address.User.UserName</h5>
                        <p>@address.AdressLine, @address.City @address.State - @address.ZipCode</p>
                        <a asp-controller="Checkout" asp-action="Confirm" asp-route-addressId="@address.Id" class="btn btn-primary">Deliver here</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

