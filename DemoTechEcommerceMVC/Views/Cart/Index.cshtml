@model List<Cart>

@section Styles {
    <style>
        :root {
            --primary-color: #4361ee;
            --dark-color: #212529;
            --light-color: #f8f9fa;
            --hover-color: #3a56e8;
            --danger-color: #dc3545;
        }

        .cart-header {
            background: linear-gradient(135deg, #000428, #004e92);
            position: relative;
            overflow: hidden;
        }

            .cart-header::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: url('https://images.unsplash.com/photo-1607082348824-0a96f2a4b9da?q=80&w=2070') no-repeat center center;
                background-size: cover;
                opacity: 0.3;
            }

        .cart-item {
            transition: all 0.3s ease;
            border-radius: 10px;
            margin-bottom: 1.5rem;
            padding: 1.5rem;
            background: white;
            box-shadow: 0 2px 15px rgba(0,0,0,0.05);
        }

            .cart-item:hover {
                box-shadow: 0 5px 20px rgba(0,0,0,0.1);
                transform: translateY(-2px);
            }

        .product-img-container {
            width: 100px;
            height: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #f8f9fa;
            border-radius: 8px;
            overflow: hidden;
        }

        .product-img {
            max-height: 90%;
            max-width: 90%;
            object-fit: contain;
        }

        .quantity-select {
            width: 80px;
            border-radius: 8px;
            border: 1px solid #dee2e6;
            padding: 0.5rem;
        }

        .summary-card {
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            border: none;
        }

        .coupon-input {
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
        }

        .coupon-btn {
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
        }

        .remove-btn:hover {
            background-color: var(--danger-color);
            color: white;
        }

        .total-price {
            font-size: 1.25rem;
            font-weight: 600;
        }
    </style>
}

<!-- Cart Header -->
<header class="cart-header py-5">
    <div class="container px-4 px-lg-5 my-5 position-relative">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bold mb-3">Your Cart</h1>
            <p class="lead fs-5">Review your items before placing your order</p>
        </div>
    </div>
</header>

<!-- Main Content -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <!-- Cart Items -->
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body p-4">
                        <h4 class="card-title mb-4 fw-bold">
                            <i class="bi bi-cart3 me-2"></i>Selected Items (@Model.Count)
                        </h4>

                        @if (Model.Count == 0)
                        {
                            <div class="text-center py-5">
                                <i class="bi bi-cart-x fs-1 text-muted mb-3"></i>
                                <h5 class="fw-bold">Your cart is empty</h5>
                                <p class="text-muted">Browse our products and add items to your cart</p>
                                <a asp-controller="Products" asp-action="Index" class="btn btn-primary mt-3">
                                    <i class="bi bi-arrow-left me-2"></i>Start Shopping
                                </a>
                            </div>
                        }
                        else
                        {
                            @foreach (var cartItem in Model)
                            {
                                <div class="cart-item">
                                    <div class="row align-items-center">
                                        <!-- Product Image -->
                                        <div class="col-md-2 col-4">
                                            <div class="product-img-container">
                                                <img src="@cartItem.Product.Image" class="product-img" alt="@cartItem.Product.Name">
                                            </div>
                                        </div>

                                        <!-- Product Info -->
                                        <div class="col-md-4 col-8">
                                            <h5 class="mb-1">
                                                <a asp-controller="Products" asp-action="Details" asp-route-id="@cartItem.Product.Id"
                                                   class="text-decoration-none text-dark">
                                                    @cartItem.Product.Name
                                                </a>
                                            </h5>
                                            <small class="text-muted">@cartItem.Product.CategoryNavigation</small>
                                        </div>

                                        <!-- Quantity Selector -->
                                        <div class="col-md-3 col-6 mt-3 mt-md-0">
                                            <div class="d-flex align-items-center">
                                                <select id="product-@cartItem.ProductId"
                                                        data-productId="@cartItem.ProductId"
                                                        class="form-select quantity-select"
                                                        onchange="submitCart(@cartItem.ProductId)">
                                                    @for (int i = 1; i <= 10; i++)
                                                    {
                                                        <option value="@i" selected="@(i == cartItem.Qty)">@i</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>

                                        <!-- Price & Actions -->
                                        <div class="col-md-3 col-6 mt-3 mt-md-0">
                                            <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center">
                                                <div class="mb-2 mb-md-0">
                                                    <span class="h5 fw-bold text-primary">
                                                        @((cartItem.Product.Price * cartItem.Qty).ToString("0.00")) DH
                                                    </span>
                                                </div>
                                                <div>
                                                    <a asp-controller="Cart" asp-action="Remove" asp-route-id="@cartItem.Id"
                                                       class="btn btn-outline-danger btn-sm remove-btn">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>

                <!-- Delivery Info -->
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-truck fs-4 text-primary me-3"></i>
                            <div>
                                <h5 class="mb-1">Free Delivery</h5>
                                <p class="text-muted mb-0">Shipping within 1–2 weeks</p>
                            </div>
                        </div>
                        <p class="text-muted">
                            All our products are carefully packaged and shipped with great care. Enjoy our exceptional customer service and hassle-free return policy.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4 mt-4 mt-lg-0">
                <div class="card summary-card sticky-top" style="top: 20px;">
                    <div class="card-body p-4">
                        <h4 class="card-title mb-4 fw-bold">
                            <i class="bi bi-receipt me-2"></i>Summary
                        </h4>

                        <!-- Coupon Code -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Promo Code</label>
                            <div class="input-group">
                                <input type="text" class="form-control coupon-input" placeholder="Entrez un code">
                                <button class="btn btn-primary coupon-btn">Apply</button>
                            </div>
                        </div>

                        <!-- Order Summary -->
                        <div class="border-top pt-3">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Sous-total:</span>
                                <span>@ViewBag.TotalCost.ToString("0.00") DH</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Shipping:</span>
                                <span class="text-success">Free</span>
                            </div>
                            <div class="d-flex justify-content-between mb-3">
                                <span>Taxes:</span>
                                <span>included</span>
                            </div>

                            <div class="d-flex justify-content-between border-top pt-3 mb-4">
                                <span class="fw-bold">Total:</span>
                                <span class="fw-bold total-price">@ViewBag.TotalCost.ToString("0.00") DH</span>
                            </div>

                            <!-- Checkout Button -->
                            <a asp-controller="Checkout" asp-action="Index"
                               class="btn btn-primary w-100 py-2 mb-3 @(Model.Count == 0 ? "disabled" : "")">
                                <i class="bi bi-credit-card me-2"></i>Place Order
                            </a>

                            <!-- Continue Shopping -->
                            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-dark w-100 py-2">
                                <i class="bi bi-arrow-left me-2"></i>Continue Shopping
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        function submitCart(productId) {
            const selectElement = document.getElementById(`product-${productId}`);
            const qty = selectElement.value;

            // Show loading state
            selectElement.disabled = true;

            fetch(`/Cart/UpdateQty?productId=${productId}&qty=${qty}`, {
                method: 'GET'
            })
            .then(response => {
                if (response.ok) {
                    window.location.reload(); // Refresh to update totals
                } else {
                    alert("Une erreur s'est produite");
                    selectElement.disabled = false;
                }
            })
            .catch(error => {
                console.error('Error:', error);
                selectElement.disabled = false;
            });
        }

        // Animate cart items on load
        document.addEventListener('DOMContentLoaded', function() {
            const items = document.querySelectorAll('.cart-item');
            items.forEach((item, index) => {
                item.style.opacity = '0';
                item.style.transform = 'translateX(20px)';
                item.style.transition = `all 0.4s ease ${index * 0.1}s`;

                setTimeout(() => {
                    item.style.opacity = '1';
                    item.style.transform = 'translateX(0)';
                }, 100);
            });
        });
    </script>
}