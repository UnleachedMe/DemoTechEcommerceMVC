@model List<Order>

<section class="py-5">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="fw-bold mb-0">Your Orders</h2>
                    <div class="d-flex">
                        
                        <form asp-action="Search" method="post" class="mb-4">
                            <div class="input-group">
                                <input type="text"
                                       class="form-control"
                                       name="searchTerm"
                                       placeholder="Search by ID, amount...">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-search"></i> Search
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-counterclockwise"></i>
                                </a>
                            </div>
                        </form>


                    </div>
                </div>

                <!-- Modern Order List Table -->
                <div class="card border-0 shadow-sm">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th scope="col" class="ps-4">Order #</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Total</th>
                                    <th scope="col" class="text-end pe-4">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td class="ps-4 fw-semibold">#@order.Id</td>
                                        <td>@order.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            @{
                                                var statusClass = "bg-light";
                                                var textClass = "text-muted";
                                                if (order.Status == "Completed")
                                                {
                                                    statusClass = "bg-success-light";
                                                    textClass = "text-success";
                                                }
                                                else if (order.Status == "Processing")
                                                {
                                                    statusClass = "bg-warning-light";
                                                    textClass = "text-warning";
                                                }
                                                else if (order.Status == "Cancelled")
                                                {
                                                    statusClass = "bg-danger-light";
                                                    textClass = "text-danger";
                                                }
                                            }
                                            <span class="badge @statusClass @textClass rounded-pill py-2 px-3">
                                                @order.Status
                                            </span>
                                        </td>
                                        <td class="fw-semibold">$@order.Amount.ToString("N2")</td>
                                        <td class="text-end pe-4">
                                            <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id"
                                               class="btn btn-sm btn-outline-primary rounded-pill px-3 me-2">
                                                <i class="bi bi-eye me-1"></i> View
                                            </a>
                                            @if (order.Status != "Cancelled")
                                            {
                                                <a asp-controller="Orders" asp-action="CancelOrder" asp-route-id="@order.Id" class="btn btn-sm btn-outline-danger rounded-pill px-3">
                                                    <i class="bi bi-x-circle me-1"></i> Cancel
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <div class="card-footer bg-transparent border-0 d-flex justify-content-between align-items-center">
                        <div class="text-muted small">
                            Showing 1 to @Model.Count of @Model.Count entries
                        </div>
                        <nav aria-label="Page navigation">
                            <ul class="pagination pagination-sm mb-0">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Add Bootstrap Icons if not already included -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">