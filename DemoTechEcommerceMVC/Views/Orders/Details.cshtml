@model Order

<section class="py-4">
    <div class="container px-4 px-lg-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold mb-0">Order Details</h2>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Back to Orders
            </a>
        </div>

        <div class="row gx-4 gx-lg-5">
            <div class="col-lg-8">
                <!-- Order Summary Card -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h4 class="fw-bold">Order #@Model.Id</h4>
                                <p class="text-muted mb-0">Placed on @Model.CreatedAt.ToString("MMMM dd, yyyy")</p>
                            </div>
                            <div>
                                @{
                                    var statusClass = "badge bg-light text-dark";
                                    if (Model.Status == "Completed") { statusClass = "badge bg-success"; }
                                    else if (Model.Status == "Processing") { statusClass = "badge bg-warning"; }
                                    else if (Model.Status == "Cancelled") { statusClass = "badge bg-danger"; }
                                }
                                <span class="@statusClass rounded-pill py-2 px-3">@Model.Status</span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <h5 class="fw-semibold">Shipping Address</h5>
                                <address class="text-muted">
                                    @Model.Address.AdressLine<br>
                                    @Model.Address.City, @Model.Address.State @Model.Address.ZipCode
                                </address>
                            </div>
                            <div class="col-md-6 mb-3">
                                <h5 class="fw-semibold">Payment Method</h5>
                                <p class="text-muted">Credit Card ending in ****</p>
                                <h5 class="fw-semibold mt-2">Order Total</h5>
                                <p class="h4 fw-bold text-primary">$@Model.Amount.ToString("N2")</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Order Items Card -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="fw-bold mb-0">Order Items (@Model.OrderProducts.Count)</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table align-middle mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th scope="col" style="width: 120px;">Product</th>
                                        <th scope="col">Details</th>
                                        <th scope="col" class="text-end">Price</th>
                                        <th scope="col" class="text-center">Qty</th>
                                        <th scope="col" class="text-end">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var orderProduct in Model.OrderProducts)
                                    {
                                        <tr>
                                            <td>
                                                <a asp-controller="Products" asp-action="Details" asp-route-id="@orderProduct.ProductId">
                                                    <img src="@orderProduct.Product.Image"
                                                         alt="@orderProduct.Product.Name"
                                                         class="img-fluid rounded"
                                                         style="width: 80px; height: 80px; object-fit: cover;">
                                                </a>
                                            </td>
                                            <td>
                                                <a asp-controller="Products" asp-action="Details" asp-route-id="@orderProduct.ProductId"
                                                   class="fw-semibold text-decoration-none">
                                                    @orderProduct.Product.Name
                                                </a>
                                            </td>
                                            <td class="text-end">$@orderProduct.Price.ToString("N2")</td>
                                            <td class="text-center">@orderProduct.Qty</td>
                                            <td class="text-end fw-bold">$@((orderProduct.Price * orderProduct.Qty).ToString("N2"))</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Actions Sidebar -->
            <div class="col-lg-4 mt-4 mt-lg-0">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="fw-bold mb-3">Order Actions</h5>

                        @if (Model.Status != "Cancelled")
                        {
                            <a asp-controller="Orders" asp-action="CancelOrder" asp-route-id="@Model.Id" class="btn btn-outline-danger w-100 mb-3">
                                <i class="bi bi-x-circle me-2"></i> Cancel Order
                            </a>
                        }

                        <button class="btn btn-outline-secondary w-100 mb-3">
                            <i class="bi bi-printer me-2"></i> Print Invoice
                        </button>

                        <button class="btn btn-outline-primary w-100">
                            <i class="bi bi-chat-left-text me-2"></i> Contact Support
                        </button>

                        <hr class="my-4">

                        <h5 class="fw-bold mb-3">Shipping Information</h5>
                        <div class="d-flex mb-2">
                            <div class="me-3 text-primary">
                                <i class="bi bi-truck fs-4"></i>
                            </div>
                            <div>
                                <p class="mb-0 fw-semibold">Standard Shipping</p>
                                <p class="text-muted small mb-0">Estimated delivery: @DateTime.Now.AddDays(3).ToString("MMMM dd, yyyy")</p>
                            </div>
                        </div>

                        <div class="progress mb-4" style="height: 6px;">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: 65%;" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>

                        <div class="alert alert-light border small mb-0">
                            <div class="d-flex">
                                <div class="me-2 text-primary">
                                    <i class="bi bi-info-circle"></i>
                                </div>
                                <div>
                                    Need to return an item? Initiate a return within 30 days of delivery.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Add Bootstrap Icons if not already included -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<style>
    .card {
        border-radius: 0.75rem;
    }

    .progress {
        border-radius: 3px;
    }

    address {
        font-style: normal;
    }
</style>