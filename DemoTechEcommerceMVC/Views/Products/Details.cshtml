@model Product

@section PageTitle {
    <!-- Header-->
    <header class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Product Details</h1>
                <p class="lead fw-normal text-white-50 mb-0">@Model.Name</p>
            </div>
        </div>
    </header>
}

<section class="py-5">
    <div class="container mt-5 mb-5">
        <div class="card">
            <div class="row g-0">
                <div class="col-md-4 border-end">
                    <div class="d-flex flex-column justify-content-center">
                        <div class="main_image"> <img src="@Model.Image" id="main_product_image" width="350" height="350"> </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="p-3 right-side">
                        <h3 class="mb-4">@Model.Name</h3>

                        <div class="mb-4 pr-3 content">
                            <p>@Model.Description</p>
                        </div>

                        <h3 class="mb-4">$@Model.Price</h3>

                        <div>
                            <a asp-controller="Cart"
                               asp-action="AddToCart"
                               asp-route-productId="@Model.Id"
                               class="btn btn-outline-dark">Add to Cart</a>
                        </div>
                    </div>
                </div>

            </div>
            <div class="d-flex justify-content-end p-3">
                <a asp-controller="Products" asp-action="Index" class="btn btn-secondary">Back to Products</a>
            </div>
        </div>
    </div>
</section>