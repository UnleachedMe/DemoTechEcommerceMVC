@model Product

@section PageTitle {
    <!-- Modern Header with Gradient -->
    <header class="bg-gradient-primary py-4">
        <div class="container px-4 px-lg-5">
            <div class="text-center text-white">
                <h1 class="display-5 fw-bold mb-3">@Model.Name</h1>
                <div class="d-flex justify-content-center gap-3">
                    <a asp-controller="Products" asp-action="Index" class="btn btn-outline-light btn-sm">
                        <i class="bi bi-arrow-left me-1"></i> Back to Products
                    </a>
                </div>
            </div>
        </div>
    </header>
}

<section class="py-5">
    <div class="container">
        <div class="card border-0 shadow-lg overflow-hidden">
            <div class="row g-0">
                <!-- Product Image Column -->
                <div class="col-lg-5 col-xl-4">
                    <div class="p-4 d-flex align-items-center justify-content-center bg-light" style="min-height: 400px;">
                        <img src="@Model.Image"
                             class="img-fluid rounded-3 object-fit-contain"
                             alt="@Model.Name"
                             style="max-height: 350px; width: auto;">
                    </div>
                </div>

                <!-- Product Details Column -->
                <div class="col-lg-7 col-xl-8">
                    <div class="p-4 p-md-5">
                        <!-- Product Header -->
                        <div class="d-flex justify-content-between align-items-start mb-4">
                            <div>
                                <span class="badge bg-success mb-2">In Stock</span>
                                <h2 class="fw-bold mb-2">@Model.Name</h2>
                                <div class="d-flex align-items-center mb-3">
                                    <div class="text-warning me-2">
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-half"></i>
                                    </div>
                                    <small class="text-muted">(24 reviews)</small>
                                </div>
                            </div>
                            <h3 class="text-primary fw-bold">$@Model.Price.ToString("N2")</h3>
                        </div>

                        <!-- Product Description -->
                        <div class="mb-4">
                            <h5 class="fw-semibold mb-3">Description</h5>
                            <p class="text-muted">@Model.Description</p>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-3 mb-4">
                            
                            <a asp-controller="Cart"
                               asp-action="AddToCart"
                               asp-route-productId="@Model.Id"
                               class="btn btn-primary flex-grow-1">
                                <i class="bi bi-cart-plus me-2"></i>Add to Cart
                            </a>
                        </div>

                        <!-- Product Meta -->
                        <div class="border-top pt-3">
                            <div class="row g-3">
                                <div class="col-6 col-md-4">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-truck me-2 text-muted"></i>
                                        <small>Free shipping</small>
                                    </div>
                                </div>
                                <div class="col-6 col-md-4">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-arrow-repeat me-2 text-muted"></i>
                                        <small>30-day returns</small>
                                    </div>
                                </div>
                                <div class="col-6 col-md-4">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-shield-check me-2 text-muted"></i>
                                        <small>2-year warranty</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .object-fit-contain {
        object-fit: contain;
    }

    .quantity-input {
        max-width: 120px;
    }
</style>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">